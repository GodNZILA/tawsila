<div     class="d-flex justify-content-center flex-row-reverse">
  <div class="title p-3">
      <div class="d-flex justify-content-between align-items-center mb-3" >
        <%= image_tag "logo", style: "height: 40px" %>
        <h2>Liste de réservations</h2>
        <%= image_tag "avatar", style: "height: 40px; border-radius: 50%" %>
      </div>
  </div>
  <br>

  <div class="container_voiture">
    <% @voitures.each do |voiture| %>
      <div class="card-voiture d-flex flex-column gap-3 position-relative">
        <div>
            <%= cl_image_tag voiture.photo.key, height: 200, width: 300, crop: :fill, gravity: :auto  %>
        </div>
        <ul>
          <li>Marque: <%= voiture.marque %></li>
          <li>Modèle: <%= voiture.model %></li>
          <li>immatriculation: <%= voiture.immatriculation %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
