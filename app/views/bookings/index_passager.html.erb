<div class="title p-3">
    <div class="d-flex justify-content-between align-items-center mb-3" >
  <%= image_tag "logo", style: "height: 40px" %>
        <h2>Réservations</h2>
  <%= image_tag "avatar", style: "height: 40px; border-radius: 50%" %>
  </div>
  <div class="card_booking_passager d-flex flex-column gap-3 position-relative">
    <% if @bookings %>
      <% @bookings.each do |booking|%>
          <div class="card-offre p-3" data-controller="popup">
        <div class= "d-flex gap-2 align-items-center">
          <%= image_tag "location" %>
          <span><%= booking.depart %>Medina</span>
        </div>
        <%= image_tag "trajet" %>
        <div class= "d-flex gap-2 align-items-center">
          <%= image_tag "location" %>
          <span><%= booking.arrivee %>Derb Sultan</span>
        </div>
        <div class= "d-flex gap-2 align-items-center mt-2">
          <%= image_tag "date" %>
          <span><%= booking.heure_depart %>17:00</span>
        </div>
        <div class= "d-flex gap-2 align-items-center mt-2">
          <%= image_tag "price" %>
          <span><%= booking.prix %> MAD</span>
        </div class='d-flex w-100 justify-end'>
          <%= link_to "Voir la réservation", booking_path(booking), :class=> "btn btn-primary-sm" %>
        </div>
      <% end %>
      <% else %>
        <p>Vous n'avez pas de réservation</p>
      <% end %>
    </div>
</div>
