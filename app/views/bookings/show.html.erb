<div class="title p-3">
    <div class="d-flex justify-content-between align-items-center mb-3" >
  <%= image_tag "logo", style: "height: 40px" %>
        <h2>Détails du trajet</h2>
  <%= image_tag "avatar", style: "height: 40px; border-radius: 50%" %>
  </div>
</div>

<div class= "d-flex gap-2 align-items-center">
        <%= image_tag "location" %>
        <span><%= @booking.depart %></span>
      </div>
    <%= image_tag "trajet" %>
      <div class= "d-flex gap-2 align-items-center">
        <%= image_tag "location" %>
        <span><%= @booking.arrivee %></span>
      </div>
      <div class= "d-flex gap-2 align-items-center mt-2">
        <%= image_tag "date" %>
        <span><%= @booking.heure_depart %></span>
      </div>
      <div class= "d-flex gap-2 align-items-center mt-2">
        <%= image_tag "price" %>
        <span><%= @booking.prix %> MAD</span>
      </div>


      <%= link_to "Retour", bookings_path %>
      <%= link_to "Editer", edit_booking_path(@booking) %>
      <%= link_to "Supprimer la réservation", booking_path(@booking),data: {turbo_method: :delete, turbo_confirm: "Êtes vous sûr de supprimer cette réservation?"}%>
